<style type="text/css">
	.bootstrap-filestyle {
    margin: auto; 
    padding-top: 10px;		
	}
	div.well{
		border-radius: 0px;
		margin-top: 30px;
	}
	div.dropdown-menu{
		z-index: 100000
	}
</style>
<div class="main-container">
  <div class="container">
  <div class="row">
    <div class="col-md-9 widget">
      <div class="well-box">

		    <div class="row thumb_holder">
		      <div class="col-md-12">
	          <div class="row">
	            <div class="col-md-12">
	              <h2 class="gd-title">Business Info</h2>
	            </div>

							<%= form_for(@profile, url: wizard_path, method: :put, class: "form-horizontal") do |f| %>		

							  <%= render 'shared/form_error_message', f:f %>
									
			          <div class="form-group">
			            <div class="profile-userpic"> <%= image_tag "profile_user.jpg", class:"img-responsive img-circle", alt:"" %> 
										<%= f.attachment_field :profile_image, direct: true, class: "filestyle", :'data-input'=>"false", :'data-buttonName'=>"btn-primary btn-sm" %>
			            </div>
			          </div>							  
							  
							  <div class="form-group">
							    <%= f.label :business_name, "Company Name", class: "control-label" %><br>
							    <%= f.text_field :business_name,class: "form-control", placeholder: "Enter Business Name", autocomplete: "off", autofocus: true %>
							  </div>
							  <div class="form-group">
							    <%= f.label :about, "About Company", class: "control-label" %><br>
							    <%= f.text_area :about, class: "form-control", size: "x5", placeholder: "About Company", autocomplete: "off" %>
							  </div>
							  <div class="form-group">
							    <%= f.label :services, class: "control-label" %>
							    <%= f.text_area :services, class: "form-control", placeholder: "Service Render, seperated by comma", autocomplete: "off" %>
							  </div> 							  
							  <div class="form-group">
							    <%= f.label :phone, class: "control-label" %>
							    <%= f.text_field :phone,class: "form-control", placeholder: "Enter Phone Number", autocomplete: "off" %>
							  </div>
							  <div class="form-group">
							    <%= f.label :category_id, "Type of Business", class: "control-label" %>
							    <%= f.collection_select :category_id, Category.all, :id, :name, options = {prompt: "Select Category"}, html_options = {class: "form-control selectpicker"} %>
							  </div> 
							  <% if current_user.nil? %>
								  <div class="well">
									  <div class="form-group">
									    <%= f.label :username, class: "control-label" %>
									    <%= f.text_field :username,class: "form-control", placeholder: "Username", autocomplete: "off" %>
									  </div>
									  <div class="form-group">
									    <%= f.label :email, "Type of Business", class: "control-label" %>
									    <%= f.text_field :email,class: "form-control", placeholder: "Email Address", autocomplete: "off" %>
									  </div>
								  </div>
							  <% end %>
							  <hr/>
							  <div class="form-group">
							    <%= f.button "Continue", class: "btn btn-success btn-lg", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Progress, Please wait..."} %>
							  </div>

							<% end %>

	          </div>
		      </div>

      	</div>
    	</div>
  	</div>
  	<div class="col-md-3 shop-sidebar">
  		<%= render partial: 'shared/listing_sidebar' %>
  	</div>
	</div>
	</div>
</div>