<div class="main-container">
  <div class="container">
  <div class="row">

    <div class="col-md-9 widget">
      <div class="well-box">

		    <div class="row thumb_holder">
		      <div class="col-md-12">
	          <div class="row">
	            <div class="col-md-12">
	              <h2 class="gd-title">Log In Details</h2>
	            </div>

							<%= form_for(@user, url: wizard_path, method: :put, class: "form-horizontal") do |f| %>
							  
							  <%= render 'shared/form_error_message', f:f %>

	              <div class="form-group">
	                <%= f.label :username, class: "control-label" %>
	                <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true, autocomplete: "off" %>
	              </div>

	              <div class="form-group">
	                <%= f.label :email, class: "control-label" %>
	                <%= f.email_field :email, class: "form-control", placeholder: "Email Address", required: true, autocomplete: "off" %>
	              </div>

	              <div class="form-group">
	                <%= f.label :password, class: "control-label" %>
	                <% if @minimum_password_length %>
	                <em>(<%= @minimum_password_length %> characters minimum)</em>
	                <% end %><br />
	                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
	              </div>

	              <div class="form-group">
	                <%= f.label :password_confirmation, class: "control-label" %><br />
	                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
	                <%= hidden_field :status, value: :active %>
	              </div>

							  <hr/>
							  <div class="form-group">
							    <%= f.button "Submit", class: "btn btn-success btn-lg", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Progress, Please wait..."} %>
							  </div>
							<% end %>

	          </div>
		      </div>

      	</div>
    	</div>
  	</div>

  	<div class="col-md-3 shop-sidebar">
  		<%= render partial: 'shared/listing_sidebar' %>
  	</div>

	</div>
	</div>
</div>