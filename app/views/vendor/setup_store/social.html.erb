<div class="main-container">
  <div class="container">
  <div class="row">

    <div class="col-md-9 widget">
      <div class="well-box">

		    <div class="row thumb_holder">
		      <div class="col-md-12">
	          <div class="row">
	            <div class="col-md-12">
	              <h2 class="gd-title">Social Info</h2>
	            </div>

							<%= form_for(@profile, url: wizard_path, method: :put, class: "form-horizontal") do |f| %>
							  
							  <% if f.object.errors.any? %>
							    <div class="error_messages">
							      <% f.object.errors.full_messages.each do |error| %>
							        <p><%= error %></p>
							      <% end %>
							    </div>
							  <% end %>

							  <div class="form-group">
							    <div class="row">
							      <div class="col-sm-6">
							        
							        <%= f.label :website, class: "control-label" %>
							        <div class="input-group">
							          <span class="input-group-addon"><i class="fa fa-globe fa-lg"></i></span>
							          <%= f.text_field :website, class: "form-control", placeholder: "Enter Website", autocomplete: "off",autofocus: true %>
							        </div>        

							      </div>

							      <div class="col-sm-6">
							      <%= f.label :instagram, class: "control-label" %>
							        <div class="input-group">
							          <span class="input-group-addon">https://</span>
							          <%= f.text_field :instagram, class: "form-control", placeholder: "Enter Instagram", autocomplete: "off" %> 
							        </div>       
							      </div>
							    </div>
							  </div> 
							  
							  <div class="form-group">
							    <div class="row">
							      <div class="col-sm-6">

							        <%= f.label :twitter, class: "control-label" %>
							        <div class="input-group">
							          <span class="input-group-addon">https://</span>
							          <%= f.text_field :twitter, class: "form-control", placeholder: "Enter Twitter", autocomplete: "off" %>
							        </div>

							      </div>
							      <div class="col-sm-6">
							        <%= f.label :facebook, class: "control-label" %><br>
							        <div class="input-group">
							          <span class="input-group-addon">https://</span>
							          <%= f.text_field :facebook, class: "form-control", placeholder: "Enter Facebook", autocomplete: "off" %>
							          </div>
							      </div> 
							    </div>   
							  </div>
							  <hr/>
							  <div class="form-group">
							    <%= f.button "Continue", class: "btn btn-success btn-lg", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Progress, Please wait..."} %>
							  </div>
							<% end %>

	          </div>
		      </div>

      	</div>
    	</div>
  	</div>

  	<div class="col-md-3 shop-sidebar">
  		<%= render partial: 'shared/listing_sidebar' %>
  	</div>

	</div>
	</div>
</div>