<style type="text/css">
.page-header {margin: 0px;}	
td {vertical-align: middle;}
.divider{
	border-bottom: 1px solid #ccc;
}
</style>

<div class="main-container">
  <div class="container">
  <h2>Side Menu</h2>
  <div class="row">
    <div class="col-md-3">
      <div class="side-nav" id="leftCol">
        <div class="hide-side" style="">
          <ul class="listnone nav affix-top" id="sidebar">
            <li><a href="#"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> How it works</a></li>
            <li class="active"><a href="#aboutus">Choose Template</a></li>
            <li><a href="#">Couple Information</a></li>
            <li><a href="#">Our Story</a></li>
            <li><a href="#">Theme Slider</a></li>
            <li><a href="#">Gallary</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9 widget">
      <div class="well-box">

		    <div class="row thumb_holder">
		      <div class="col-md-12">
	          <div class="row">
	          	<h2 class="gd-title page-header">Slider</h2>
	            <!-- <div class="col-md-12"> -->
							<%= form_for(@slider, {url: wizard_path, :method => :put}) do |form| %>	            
	            <!-- </div> -->
								<ul class="nav nav-tabs" style="margin-bottom:5px">
								  <li role="presentation" class="active"><a href="#">Upload</a></li>
								  <li role="presentation"><a href="#">Images</a></li>
								</ul>
								<div class="list">
									<div class="well">
									</div>					
									<!-- Image Listings -->
							    <div class="form-group">
						        <%= form.fields_for :pictures do |image| %>
						          <%= render 'picture_fields', :f => image %>
						        <% end %>
						        <div class="link">
						          <%= link_to_add_association 'Add Image', form, :pictures %>
						        </div>
							    </div>									

								</div>
								<%= form.submit %>

							<% end %>

	          </div>
		      </div>

      	</div>
    	</div>
  	</div>
	</div>
	</div>
</div>
							  

<script>
	$(":file").filestyle({ input: true, size: "sm" });	

	$('body').on('focus', '#my-field', function () {
		$(":file").filestyle({ input: true, size: "sm" });
	});
</script>