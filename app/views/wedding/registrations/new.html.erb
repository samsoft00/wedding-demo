<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-md-12 tp-title-center">
        <h1>Create a account &amp; save you date.<br>
          <small>Start Planning  It's Free</small> </h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 singup-couple">
        <div class="well-box">
          <h2>Sign Up for a Free Account </h2>

            <% if !flash.empty? %>
              <% flash.each do |key, value| %>
                <%= content_tag :div, value.html_safe, class: "alert alert-#{key}" %>
              <% end %>
            <% end %>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              
              <div class="form-group">
                <%= f.label :username, class: "control-label" %>
                <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true, autocomplete: "off" %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: "control-label" %>
                <%= f.email_field :email, class: "form-control", placeholder: "Email Address", required: true, autocomplete: "off" %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "control-label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: "control-label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                <%= hidden_field resource_name, :user_type, value: params[:user][:user_type] %>
              </div>
              <div class="form-group">
                <%= f.submit "Sign up", class: "btn tp-btn-primary tp-btn-lg" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-6 feature-block">
