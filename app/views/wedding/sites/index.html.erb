<p id="notice"><%= notice %></p>

<h1>Listing Sites</h1>

<table>
  <thead>
    <tr>
      <th>Groom name</th>
      <th>Bride name</th>
      <th>About groom</th>
      <th>About bride</th>
      <th>Wedding date</th>
      <th>Photographer</th>
      <th>Event planner</th>
      <th>User</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.groom_name %></td>
        <td><%= site.bride_name %></td>
        <td><%= site.about_groom %></td>
        <td><%= site.about_bride %></td>
        <td><%= site.wedding_date %></td>
        <td><%= site.photographer %></td>
        <td><%= site.event_planner %></td>
        <td><%= site.user %></td>
        <td><%= site.template %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

